                                <MudText Typo="Typo.caption">@item.id - @item.subject - @item.category</MudText>
                            </MudListItem>
                        }
                    </MudList>
                </MudPaper>
            </MudItem>
            <MudItem xs="2">
                <center>
                    <MudBadge Content="@TicketsAugusto.Count()" Overlap="true" Class="mx-6 my-4" Color="Color.Error">
                        <MudAvatar Image="https://cdn.app.movidesk.com/default-avatar.png" />
                    </MudBadge>
                </center>
                <MudPaper>
                    <MudList Clickable="true" Dense="true">
                        @foreach (var item in TicketsAugusto)
                        {
                            <MudListItem>
                                <MudText Typo="Typo.caption">@item.id - @item.subject - @item.category</MudText>
                            </MudListItem>
                        }
                    </MudList>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudTabPanel>
</MudTabs>

