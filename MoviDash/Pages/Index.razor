@page "/"

<MudContainer MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem md="4" sm="12" xs="12">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Error" Variant="Variant.Filled">
                            <MudIcon Icon="@Icons.Custom.Uncategorized.Radioactive" Size="Size.Large" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.body1">Em Aberto</MudText>
                        <MudText Typo="Typo.body2">Tickets em aberto</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudText Typo="Typo.h2">@TotalEmAberto</MudText>
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@AbertosEsseMes criados esse mês</MudText>
                </MudCardContent>        
            </MudCard>
        </MudItem>
        <MudItem md="4" sm="12" xs="12">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Tertiary" Variant="Variant.Filled">
                            <MudIcon Icon="@Icons.Outlined.AccessTime" Size="Size.Large" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.body1">Hoje</MudText>
                        <MudText Typo="Typo.body2">Tickets abertos hoje</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudText Typo="Typo.h2">@AbertosHoje</MudText>
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@AbertosHojeAindaAberto ainda em aberto</MudText>
                </MudCardContent>        
            </MudCard>
        </MudItem>
        <MudItem md="4" sm="12" xs="12">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Primary" Variant="Variant.Filled">
                            <MudIcon Icon="@Icons.Filled.ArrowDownward" Size="Size.Large" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.body1">Concluídos hoje</MudText>
                        <MudText Typo="Typo.body2">Tickets concluídos hoje</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudText Typo="Typo.h2">--</MudText>
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>...</MudText>
                </MudCardContent> 
            </MudCard>        
        </MudItem>
        <MudItem md="12" sm="12" xs="12">
            <MudTable Items="@TicketsTabela" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
                <HeaderContent>
                    <MudTh>Ticket</MudTh>
                    <MudTh>Assunto</MudTh>
                    <MudTh>Categoria</MudTh>
                    <MudTh>Situação</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Ticket">@context.id</MudTd>
                    <MudTd DataLabel="Assunto">@context.subject</MudTd>
                    <MudTd DataLabel="Categoria">@context.category</MudTd>
                    <MudTd DataLabel="Situação">@context.status</MudTd>
                </RowTemplate>
            </MudTable>
        </MudItem>
        <MudItem md="12" sm="12" xs="12">
            <MudText Typo="Typo.body2">Última atualização: @UltimaAtualizacao.ToShortDateString() - @UltimaAtualizacao.ToShortTimeString()</MudText>
        </MudItem>

    </MudGrid>
</MudContainer>
