                </MudPaper>
            </MudItem>
            <MudItem xs="2">
                <center>
                    <MudBadge Content="@TicketsRodrigo.Count()" Overlap="true" Class="mx-6 my-4" Color="Color.Error">
                        <MudAvatar Image="https://cdn.app.movidesk.com/default-avatar.png" />
